{
  "name": "clone-tab-news",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migrate:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint . --ext ts,tsx,js,jsx --max-warnings 0",
    "lint:eslint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "test": "npm run services:up &&  concurrently -n \"next,jest\" --hide next -k -s command-jest \"next dev\" \"jest --runInBand\" ",
    "test:watch": "jest --watchAll --runInBand",
    "migrate:create": "node-pg-migrate --m infra/migrations create",
    "migrate:up": "node-pg-migrate --m infra/migrations --envPath .env.development up",
    "migrate:down": "node-pg-migrate --m infra/migrations down",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js"
  },
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "jest": "^29.6.2",
    "prettier": "^3.8.0"
  }
}
